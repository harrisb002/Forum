generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // Creates the PK
  id       Int    @id @default(autoincrement()) @map("user_id") // Can column-level change names
  email    String @unique
  username String @unique
  name     String

  // Or change in the table-level
  @@map("users") // Totally optional
}
